import cv2

# Load video or camera feed
cap = cv2.VideoCapture("traffic_video.mp4")  # Replace with 0 for webcam

# Background subtractor for motion detection
fgbg = cv2.createBackgroundSubtractorMOG2()

while True:
    ret, frame = cap.read()
    if not ret:
        break

    # Resize frame for faster processing
    frame = cv2.resize(frame, (640, 480))
    
    # Apply background subtraction
    fgmask = fgbg.apply(frame)
    
    # Threshold and find contours (vehicles)
    _, thresh = cv2.threshold(fgmask, 200, 255, cv2.THRESH_BINARY)
    contours, _ = cv2.findContours(thresh, cv2.RETR_TREE, cv2.CHAIN_APPROX_SIMPLE)

    vehicle_count = 0
    for cnt in contours:
        if cv2.contourArea(cnt) > 500:  # Minimum area to consider as vehicle
            vehicle_count += 1
            x, y, w, h = cv2.boundingRect(cnt)
            cv2.rectangle(frame, (x, y), (x+w, y+h), (0, 255, 0), 2)

    # Display vehicle count and suggested traffic light time
    cv2.putText(frame, f"Vehicles: {vehicle_count}", (10, 30),
                cv2.FONT_HERSHEY_SIMPLEX, 1, (0, 0, 255), 2)
    
    # Simple rule: more vehicles -> longer green light
    if vehicle_count < 5:
        green_time = 10
    elif vehicle_count < 10:
        green_time = 20
    else:
        green_time = 30

    cv2.putText(frame, f"Green Light Time: {green_time}s", (10, 60),
                cv2.FONT_HERSHEY_SIMPLEX, 1, (255, 0, 0), 2)

    cv2.imshow('Traffic Monitor', frame)

    # Exit on 'q' key
    if cv2.waitKey(30) & 0xFF == ord('q'):
        break

cap.release()
cv2.destroyAllWindows()
